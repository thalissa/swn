<form class="flexcol {{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{data.img}}" data-edit="img" title="{{data.name}}" />
    <div class="header-fields">
      <h1 class="charname">
        <input name="name" type="text" value="{{data.name}}" placeholder="{{ localize "SWN.Item.Name" }}" />
      </h1>
      <div class="flexrow">
        <div class="resource">
          <label>{{ localize "SWN.Item.Level" }}</label>
          <input type="number" name="data.level" value="{{itemData.level}}" placeholder="{{ localize "SWN.Item.Level" }}"/>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">{{ localize "SWN.Item.Description" }}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{editor content=itemData.description target="data.description" button=true owner=owner editable=editable rollData=rollData}}
    </div>
  </section>
</form>
